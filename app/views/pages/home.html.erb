<div class="main">
  <div class="top">
    <h1>Beenie</h1>
      <h3 class="toptitle">Bring Nature Into Your Home</h3>

      <br>
      <br>

      <%= form_with url: plants_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a plant or category"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

  </div>
</div>
<br>
<div class="container">
  <h3 class="midtitle">Best plants to grow in summer</h3>
    <div class="cards">
      <% @plants.sample(4).each do |plant| %>
        <%= link_to plant_path(plant) do %>
          <div class="card-trip">
            <h3><%= plant.category.name %></h3>
              <%= cl_image_tag plant.image.key %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= plant.name %></h2>
                </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
