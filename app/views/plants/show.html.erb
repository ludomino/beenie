

<div class= "containershow">
    <div class="img_show" class="row" class="col-sm-6">
      <%= cl_image_tag @plant.image.key, class: "image-show-plant" %>
    </div>

  <div class='containertext'>
  <div class="row">
    <div class= "show-h2" class="row" class="col-sm-3">

      <div class="categ"> Category: <%= @plant.category.name %> </div>
      <h1> <%= @plant.name %> </h1>

    <h3 class="descrip">Description</h3>
          <hr>

      <p> <%= @plant.description%> </p>
        <h3 class="descrip">Follow-up</h3>
              <hr>

      <p> <%= @plant.advice%> </p>

   </div>
  </div>

   <%= simple_form_for [@plant, @user_plant] do |f| %>
    <%= f.input :planted_day, as: :hidden %>
    <div class="formulaire">
      <%= f.submit "Buy this plant ðŸŒ±", class: "buy mt-3 btn btn-dark btn-wishlist", data: {controller:"redirection", action:"click->redirection#next" , redirection_url_value: "https://www.jardiland.com/catalogsearch/result/?q=#{@plant.name.split(' ').first}"}  %>


      </div>
